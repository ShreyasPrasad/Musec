<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="thacks.muse.profile">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <ImageView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:srcCompat="@drawable/logotitle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/playlists"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#7482BF"
            android:textColor="#fff"
            android:text="Playlists"
            android:layout_marginRight="61dp"
            android:layout_marginEnd="61dp"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/introText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/connectmuse"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/musictests"
            android:layout_alignStart="@+id/musictests"
            android:layout_below="@+id/musictests"
            android:layout_marginTop="32dp"
            android:background="#EF3125"
            android:text="Connect Muse"
            android:textColor="#fff" />

        <Button
            android:id="@+id/musictests"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/playlists"
            android:layout_alignStart="@+id/playlists"
            android:layout_below="@+id/playlists"
            android:layout_marginTop="28dp"
            android:background="#52BEDB"
            android:textColor="#fff"
            android:text="Music Tests" />

        <TextView
            android:id="@+id/introText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignBottom="@+id/profilePic"
            android:layout_alignLeft="@+id/profilePic"
            android:layout_alignStart="@+id/profilePic" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/circle"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:layout_marginTop="66dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/playlists"
            android:layout_alignStart="@+id/playlists" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
