<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/colorPrimary">

	<Spinner
		android:id="@+id/muses_spinner"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_above="@+id/refresh"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginRight="13dp"
		android:layout_marginEnd="13dp" />
        <Button
            android:id="@+id/refresh"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/refresh"
			android:background="#7482BF"
			android:layout_alignBottom="@+id/pause"
			android:layout_alignLeft="@+id/disconnect"
			android:layout_alignStart="@+id/disconnect" />
	    <Button
	        android:id="@+id/connect"
	        android:layout_width="150dp"
	        android:layout_height="40dp"
			android:background="#52BEDB"
	        android:text="@string/connect"
			android:layout_marginRight="15dp"
			android:layout_marginEnd="15dp"
			android:layout_below="@+id/pause"
			android:layout_toLeftOf="@+id/disconnect"
			android:layout_toStartOf="@+id/disconnect"
			android:layout_marginTop="8dp" />

	<TextView
   		android:layout_width="match_parent"
    	android:layout_height="30dp"
		android:textSize="16sp"
    	android:text="@string/status"
		android:layout_marginTop="49dp"
		android:textColor="#fff"
		android:id="@+id/connectprompt"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true" />

	<Button
		android:id="@+id/pause"
		android:background="#7482BF"
		android:layout_width="150dp"
		android:layout_height="40dp"
		android:text="@string/pause"
		android:layout_marginTop="65dp"
		android:layout_below="@+id/connectprompt"
		android:layout_alignLeft="@+id/connect"
		android:layout_alignStart="@+id/connect" />

	<Button
		android:id="@+id/disconnect"
		android:layout_width="150dp"
		android:layout_height="40dp"
		android:background="#52BEDB"
		android:text="@string/disconnect"
		android:layout_marginRight="17dp"
		android:layout_marginEnd="17dp"
		android:layout_above="@+id/startmusic"
		android:layout_alignRight="@+id/muses_spinner"
		android:layout_alignEnd="@+id/muses_spinner" />

	<TextView
		android:id="@+id/title4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:text="Connect to Your Muse"
		android:textColor="#fff"
		android:textSize="20dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" />

	<Button
		android:id="@+id/startmusic"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/connect"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="155dp"
		android:text="Start Music" />

</RelativeLayout>