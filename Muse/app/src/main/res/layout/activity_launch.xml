<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#464646"
    tools:context="thacks.muse.launch">

  <RelativeLayout
      android:layout_width="395dp"
      android:layout_height="643dp"
      tools:layout_editor_absoluteY="8dp"

      tools:layout_editor_absoluteX="8dp">

      <EditText
          android:id="@+id/userPrompt"
          android:layout_width="260dp"
          android:layout_height="wrap_content"
          android:hint="@string/prompt_username"
          android:textColorHint="#fff"
          android:textColor="#fff"
          android:backgroundTint="#fff"
          android:maxLines="1"
          android:layout_below="@+id/imageView"
          android:layout_alignRight="@+id/imageView"
          android:layout_alignEnd="@+id/imageView"
          android:layout_marginRight="51dp"
          android:layout_marginEnd="51dp" />

      <EditText
          android:id="@+id/passPrompt"
          android:maxLines="1"
          android:layout_width="260dp"
          android:layout_height="wrap_content"
          android:textColorHint="#fff"
          android:layout_centerHorizontal="true"
          android:hint="@string/prompt_password"
          android:textColor="#fff"
          android:layout_marginTop="14dp"
          android:backgroundTint="#fff"
          android:layout_below="@+id/userPrompt"
          android:layout_alignLeft="@+id/userPrompt"
          android:layout_alignStart="@+id/userPrompt"
          android:inputType="textPassword"/>

      <ImageButton
          android:id="@+id/login"
          android:layout_width="300dp"
          android:scaleX="0.67"
          android:scaleY="0.67"
          android:layout_height="60dp"
          android:background="@drawable/login"
          android:text="@string/action_sign_in"
          android:layout_marginTop="52dp"
          android:layout_below="@+id/passPrompt"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="33dp"
          android:layout_marginStart="33dp" />

      <ImageButton
          android:id="@+id/createAccount"
          android:layout_width="300dp"
          android:scaleX="0.67"
          android:scaleY="0.67"
          android:layout_height="60dp"
          android:background="@drawable/signup"
          android:text="@string/createAccount"
          android:layout_alignTop="@+id/login"
          android:layout_alignLeft="@+id/login"
          android:layout_alignStart="@+id/login"
          android:layout_marginTop="44dp" />

      <ImageView
          android:id="@+id/imageView"
          android:scaleY="0.8"
          android:scaleX="0.8"
          android:layout_width="wrap_content"
          android:layout_height="260dp"
          app:srcCompat="@drawable/muselogo"
          android:layout_marginRight="24dp"
          android:layout_marginEnd="24dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true" />

  </RelativeLayout>


</android.support.constraint.ConstraintLayout>
